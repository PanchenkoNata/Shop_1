<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h2 class=""><%= title %></h2>
    <% if (error) { %>
    <div class="error">
        <p>Error! <%= error %></p>
    </div>
    <% } %>
    
    <form action="" method="POST" class="form">
        <div class="form-group">
            <label for="name">Name<span class="text-danger">*</span></label>
            <input class="" type="text" name="name" placeholder="Your name" minlength="2" maxlength="20" required value="<%= data.name %>">
        </div>
        <div class="form-group">
            <label for="surname">Surname<span class="text-danger">*</span></label>
            <input class="" type="text" name="surname" placeholder="Your surname" minlength="2" maxlength="20" required value="<%= data.surname %>">
        </div>
        <div class="form-group">
            <label for="email">E-mail<span class="text-danger">*</span></label>
            <input class="" type="email" name="email" placeholder="Your e-mail" minlength="5" maxlength="100" required value="<%= data.email %>">
        </div>
        <div class="form-group">
            <label for="password">Password<span class="text-danger">*</span></label>
            <input class="" type="password" name="password" placeholder="Your password" minlength="4" maxlength="100" required value="">
        </div>
        <div class="form-group">
            <label for="passwordRepeat">Repeat your password<span class="text-danger">*</span></label>
            <input class="" type="password" name="passwordRepeat" placeholder="Repeat ypur password" minlength="4" maxlength="100" required value="">
        </div>
        <div class="form-group">
            <label for="phone">Phone<span class="text-danger">*</span></label>
            <input class="" type="text" name="phone" placeholder="Your phone number: example (+380)501111111" minlength="15" maxlength="15" required value="<%= data.phone %>">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input class="" type="text" name="address" placeholder="Your address" maxlength="200" value="<%= data.address %>">
        </div>
        
        <button class="btn" type="submit">Sign Up</button>
        <button class="btn" type="button"><a href='/login'>Log In</a></button>
    </form>

    <script src="/javascripts/signup.js"></script>
  </body>
</html>
