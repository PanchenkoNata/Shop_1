<!DOCTYPE html>
<html>
	<head>
		<title><%= __(title) %></title>
		<meta name='viewport' content='width=device-width, initial-scale=1.0'>
		<meta charset='utf-8'>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
		<link rel='stylesheet' type='text/css' href='/stylesheets/style.css'>
		<link rel='stylesheet' type='text/css' href='/stylesheets/adminStyle.css'>
	</head>
	<body>
		<div class='wrapper'>
			<%- include('adminHeader'); -%>
			<div class='content container'>
				<ul class="breadcrumb">
					<li><a href='/admin'><%= __('Admin') %></a></li>
					<li><a href='/admin/<%= __(title) %>'><%= __(title) %></a></li>
				</ul>
				
				<div class='content-main'>
					<%- include('adminLeftNav'); -%>
					<div class='content-info'>
						<h2><%= __(title) %></h2>
						<div><a class='link-block' href='/admin/categories/add'>Add category</a></div>
						<div>
							<p>All categories:</p>
							<ul class='categories-list'>
								<% categories.forEach(function(category) { %>
									<li data-categoryId='<%= category.id %>' data-categoryname='<%= category.name %>'>
										<span><%= category.name %></span>
										<a class='' href='/admin/categories/update/<%= category.name %>'>Update</a>
										<a class='' href='/admin/categories/add/<%= category.name %>'>Delete</a>
									</li>
								<% }); %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<script src='/javascripts/categories.js'></script>
	</body>
</html>
